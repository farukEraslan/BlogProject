@model User
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Forms - Ready Bootstrap Dashboard</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" href="~/backTemplate/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="~/backTemplate/assets/css/ready.css">
    <link rel="stylesheet" href="~/backTemplate/assets/css/demo.css">
</head>
<body>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="offset-3 col-md-6">
                    <form asp-action="Login" asp-controller="Account" asp-area="" method="post">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">BA Blog Giriş Formu</div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="EmailAddress">E-posta Adresi</label>
                                    <input asp-for="EmailAddress" type="email" class="form-control" placeholder="E-posta Adresi">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Parola</label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Parola">
                                </div>
                            </div>
                            <div class="card-action mx-auto">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/backTemplate/assets/js/core/jquery.3.2.1.min.js"></script>
<script src="~/backTemplate/assets/js/plugin/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
<script src="~/backTemplate/assets/js/core/popper.min.js"></script>
<script src="~/backTemplate/assets/js/core/bootstrap.min.js"></script>
<script src="~/backTemplate/assets/js/plugin/chartist/chartist.min.js"></script>
<script src="~/backTemplate/assets/js/plugin/chartist/plugin/chartist-plugin-tooltip.min.js"></script>
<script src="~/backTemplate/assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>
<script src="~/backTemplate/assets/js/plugin/bootstrap-toggle/bootstrap-toggle.min.js"></script>
<script src="~/backTemplate/assets/js/plugin/jquery-mapael/jquery.mapael.min.js"></script>
<script src="~/backTemplate/assets/js/plugin/jquery-mapael/maps/world_countries.min.js"></script>
<script src="~/backTemplate/assets/js/plugin/chart-circle/circles.min.js"></script>
<script src="~/backTemplate/assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>
<script src="~/backTemplate/assets/js/ready.min.js"></script>
</html>

