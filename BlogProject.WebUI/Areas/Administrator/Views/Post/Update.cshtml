
@model Post
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6">
    @if (TempData["MessageError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MessageError"]
        </div>
    }
    else if (TempData["MessageSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MessageSuccess"]
        </div>
    }
    <form asp-controller="Post" asp-action="Update" asp-area="Administrator">
        <input type="hidden" asp-for="Id" />
        <div class="card">
            <div class="card-header">
                <div class="card-title">Makale Güncelle</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title">Başlık</label>
                    <input asp-for="Title" type="text" class="form-control input-square" placeholder="Başlık Giriniz...">
                </div>
                <div class="form-group">
                    <label asp-for="PostDetail">Makale İçeriği</label>
                    <textarea asp-for="PostDetail" type="text" rows="5" class="form-control input-square" placeholder="Makale Giriniz..."></textarea>
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-success">Makale Güncelle</button>
            </div>
        </div>
    </form>
</div>

