
@model Post

@{
    ViewData["Title"] = "Update";
}

<div class="col-md-12">
    @if (TempData["MessageError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MessageError"]
        </div>
    }
    else if (TempData["MessageSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["MessageSuccess"]
        </div>
    }
    <form asp-controller="Post" asp-action="Create" asp-area="Administrator" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="card">
            <div class="card-header">
                <div class="card-title"> Makale Güncelle</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title">Başlık</label>
                    <input asp-for="Title" type="text" class="form-control input-square" placeholder="Başlık Giriniz...">
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Kategori</label>
                    <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
                        <option>Lütfen Kategori Seçiniz...</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath">Makale Görseli</label>
                    <input asp-for="ImagePath" type="file" name="files" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="PostDetail">Makale İçeriği</label>
                    <textarea asp-for="PostDetail" id="summernote" rows="10" class="form-control input-square" placeholder="Makale Giriniz..."></textarea>
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-success">Güncelle</button>
            </div>
        </div>
    </form>
</div>

@section css {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
}

@section scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>

    <script>
        $('#summernote').summernote({
            placeholder: 'Hello Bootstrap 4',
            tabsize: 2,
            height: 250
        });
    </script>
}


